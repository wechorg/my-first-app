{
  "name": "my-first-app",
  "version": "1.0.9",
  "description": "my-first-app",
  "author": "tamo",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build:linux": "electron-builder --linux --dir",
    "dist:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac --dir",
    "dist:mac": "electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-builder": "^22.7.0"
  },
  "build": {
    "appId": "com.my.app.id",
    "publish": {
      "provider": "github",
      "owner": "moritamori",
      "repo": "my-first-app",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist"
    },
    "linux": {
      "category": "Utility"
    },
    "mac": {
      "target": [ "dmg" ]
    }
  }
}
